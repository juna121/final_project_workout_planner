<h1>
  Add a new exercise
</h1>


<hr>

<!-- Form exercise start -->
<form action="/create_exercise" method="post">
<!-- Form exercise end -->

  <!-- Label and input for name start -->
  <div class="form-group">
    <label for="name">
      Name
    </label>

    <!-- Input for name start -->
    <input type="text" id="name" name="name" class="form-control">
    <!-- Input for name end -->
  </div>
  <!-- Label and input for name end -->

  <!-- Label and input for muscle start -->
  <div class="form-group">
    <label for="muscle">
      Muscle
    </label>

    <!-- Input for muscle start -->
    <input type="text" id="muscle" name="muscle" class="form-control">
    <!-- Input for muscle end -->
  </div>
  <!-- Label and input for muscle end -->

  <button class="btn btn-block btn-outline-secondary">
    Create exercise
  </button>
</form>

<hr>

<a href="/exercises">
  Go back
</a>
