<h1>
  Edit performance #<%= @performance.id %>
</h1>

<hr>

<!-- Form performance start -->
<form action="/update_performance/<%= @performance.id %>" method="post">
<!-- Form performance end -->

  <!-- Label and input for workout_id start -->
  <div class="form-group">
    <label for="workout_id">
      Workout
    </label>

    <!-- Input for workout_id start -->
    <input type="text" id="workout_id" name="workout_id" class="form-control" value="<%= @performance.workout_id %>">
    <!-- Input for workout_id end -->
  </div>
  <!-- Label and input for workout_id end -->

  <!-- Label and input for reps start -->
  <div class="form-group">
    <label for="reps">
      Reps
    </label>

    <!-- Input for reps start -->
    <input type="text" id="reps" name="reps" class="form-control" value="<%= @performance.reps %>">
    <!-- Input for reps end -->
  </div>
  <!-- Label and input for reps end -->

  <!-- Label and input for sets start -->
  <div class="form-group">
    <label for="sets">
      Sets
    </label>

    <!-- Input for sets start -->
    <input type="text" id="sets" name="sets" class="form-control" value="<%= @performance.sets %>">
    <!-- Input for sets end -->
  </div>
  <!-- Label and input for sets end -->

  <!-- Label and input for weight start -->
  <div class="form-group">
    <label for="weight">
      Weight
    </label>

    <!-- Input for weight start -->
    <input type="text" id="weight" name="weight" class="form-control" value="<%= @performance.weight %>">
    <!-- Input for weight end -->
  </div>
  <!-- Label and input for weight end -->

  <!-- Label and input for exercise_id start -->
  <div class="form-group">
    <label for="exercise_id">
      Exercise
    </label>

    <!-- Input for exercise_id start -->
    <input type="text" id="exercise_id" name="exercise_id" class="form-control" value="<%= @performance.exercise_id %>">
    <!-- Input for exercise_id end -->
  </div>
  <!-- Label and input for exercise_id end -->

  <button class="btn btn-block btn-outline-secondary">
    Update performance
  </button>
</form>

<hr>

<a href="/performances">
  Go back
</a>
