<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All performances
    </h1>

    <a href="/performances/new" class="btn btn-block btn-outline-secondary">
      Add a new performance
    </a>
  </div>
</div>

<!-- Ransack Code start -->

<!-- Ransack Code end -->

<!-- Location Map Code start -->

<!-- Location Map Code end -->

<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Workout
        </th>

        <th>
          Reps
        </th>

        <th>
          Sets
        </th>

        <th>
          Weight
        </th>

        <th>
          Exercise
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @performances.each do |performance| %>
      <tr>
        <!-- Display performance.id start -->
        <td>
          <%= performance.id %>
        </td>
        <!-- Display performance.id end -->

        <!-- Display performance.workout_id start -->
        <td>
          <%= performance.workout_id %>
        </td>
        <!-- Display performance.workout_id end -->

        <!-- Display performance.reps start -->
        <td>
          <%= performance.reps %>
        </td>
        <!-- Display performance.reps end -->

        <!-- Display performance.sets start -->
        <td>
          <%= performance.sets %>
        </td>
        <!-- Display performance.sets end -->

        <!-- Display performance.weight start -->
        <td>
          <%= performance.weight %>
        </td>
        <!-- Display performance.weight end -->

        <!-- Display performance.exercise_id start -->
        <td>
          <%= performance.exercise_id %>
        </td>
        <!-- Display performance.exercise_id end -->

        <!-- Display performance.created_at start -->
        <td>
          <%= time_ago_in_words(performance.created_at) %> ago
        </td>
        <!-- Display performance.created_at end -->

        <!-- Display performance.updated_at start -->
        <td>
          <%= time_ago_in_words(performance.updated_at) %> ago
        </td>
        <!-- Display performance.updated_at end -->

        <td>
          <a href="/performances/<%= performance.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
