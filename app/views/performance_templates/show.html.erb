<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Performance #<%= @performance.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/performances" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/performances/<%= @performance.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit performance
        </a>
      </div>

      <div class="col">
        <a href="/delete_performance/<%= @performance.id %>" class="btn btn-block btn-outline-secondary">
          Delete performance
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Workout
      </dt>
      <dd>
        <% if @performance.workout.present? %>
          <a href="/workouts/<%= @performance.workout_id %>">
            <%= @performance.workout.date %>
          </a>
        <% end %>
      </dd>

      <dt>
        Reps
      </dt>
      <dd>
        <%= @performance.reps %>
      </dd>

      <dt>
        Sets
      </dt>
      <dd>
        <%= @performance.sets %>
      </dd>

      <dt>
        Weight
      </dt>
      <dd>
        <%= @performance.weight %>
      </dd>

      <dt>
        Exercise
      </dt>
      <dd>
        <% if @performance.exercise.present? %>
          <a href="/exercises/<%= @performance.exercise_id %>">
            <%= @performance.exercise.name %>
          </a>
        <% end %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@performance.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@performance.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

